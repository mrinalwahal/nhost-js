{
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"],
  "compilerOptions": {
    "outDir": "lib/esm",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "sourceMap": true,
    "noUnusedLocals": true
  }
}
